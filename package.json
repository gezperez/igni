{
  "name": "igni",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "yarn reverse; react-native run-android",
    "ios": "react-native run-ios",
    "clean": "yarn clean:android && yarn clean:ios && yarn clean:node-modules",
    "clean:android": "rm -rf android/build",
    "clean:ios": "rm -rf android/build && rm -rf ios/Pods && rm -rf ~/Library/Developer/Xcode/DerivedData/monorepo*",
    "clean:node-modules": "rm -rf node_modules",
    "start": "react-native start",
    "reverse": "adb reverse tcp:8081 tcp:8081; adb reverse tcp:9090 tcp:9090;",
    "test": "jest",
    "lint": "cd ../.. && eslint packages/mobile --ext .js,.jsx,.ts,.tsx",
    "lint-staged": "cd ../.. && eslint --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "graphql": "^15.5.0",
    "lodash": "^4.17.21",
    "react": "17.0.1",
    "react-native": "0.64.1",
    "react-native-config": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-typescript": "7.11.0",
    "@babel/runtime": "^7.14.0",
    "@react-native-community/eslint-config": "1.1.0",
    "@react-native-community/eslint-plugin": "1.1.0",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.6",
    "@types/lodash": "4.14.159",
    "@types/node": "13.13.4",
    "@types/react": "^17.0.8",
    "@types/react-dom": "16.9.7",
    "@types/react-native": "^0.64.8",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "^27.0.2",
    "babel-plugin-root-import": "6.5.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-native": "3.8.1",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-spellcheck": "0.0.14",
    "husky": "4.3.6",
    "jest": "^27.0.3",
    "lint-staged": "8.1.5",
    "metro-react-native-babel-preset": "^0.66.0",
    "prettier": "2.0.5",
    "react-test-renderer": "17.0.1",
    "ts-jest": "26.4.3",
    "ts-node": "8.9.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.8.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn tsc -b -f && yarn lint --quiet && yarn test-ci"
    }
  }
}
